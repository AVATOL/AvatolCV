<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">
	<Appenders>
		<Console name="Console" target="SYSTEM_OUT">
			<PatternLayout pattern="%d{HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n"/>
		</Console>
		<File name="mainLog" fileName="logs/avatolCV.log" append="false" bufferedIO="true" immediateFlush="true" bufferSize="1024">
				<PatternLayout pattern="%d{HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n"/>
		</File>
	</Appenders>
	<Loggers>
		<Root level="INFO">
			<AppenderRef ref="Console"/>
			<AppenderRef ref="mainLog"/>
		</Root>
		<!-- <Logger name="edu.oregonstate.eecs.iis.avatolcv.javafxui.AvatolCVJavaFX" level="debug" additivity="false">
			<AppenderRef ref="Console"/>
		</Logger> -->
	</Loggers>
</Configuration>