<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.text.*?>
<?import javafx.scene.control.*?>
<?import java.lang.*?>
<?import javafx.scene.layout.*?>


<VBox alignment="CENTER" prefHeight="373.0" prefWidth="521.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <Label styleClass="title-text" text="AvatolCV">
         <font>
            <Font size="19.0" />
         </font>
         <VBox.margin>
            <Insets bottom="20.0" top="30.0" />
         </VBox.margin>
      </Label>
      <HBox layoutY="28.0" VBox.vgrow="ALWAYS">
         <children>
            <Region minWidth="50.0" HBox.hgrow="ALWAYS" />
            <GridPane alignment="CENTER" hgap="10.0" vgap="10.0">
              <columnConstraints>
                <ColumnConstraints halignment="LEFT" hgrow="SOMETIMES" minWidth="10.0" />
                  <ColumnConstraints halignment="LEFT" hgrow="SOMETIMES" minWidth="10.0" prefWidth="80.0" />
              </columnConstraints>
              <rowConstraints>
                  <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                  <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                  <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                  <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
              </rowConstraints>
               <children>
                  <Label minWidth="-Infinity" styleClass="heading-text" text="Select from the choices below and click Start" GridPane.columnSpan="2" GridPane.vgrow="NEVER" />
                  <HBox alignment="CENTER_LEFT" fillHeight="false" spacing="10.0" GridPane.hgrow="SOMETIMES" GridPane.rowIndex="2" GridPane.vgrow="NEVER">
                     <children>
                        <RadioButton fx:id="radioResumeSession" disable="true" minWidth="-Infinity" mnemonicParsing="false" styleClass="control-text" text="Resume session in progress">
                           <toggleGroup>
                              <ToggleGroup fx:id="sessionChoice" />
                           </toggleGroup>
                        </RadioButton>
                     </children>
                  </HBox>
                  <RadioButton fx:id="radioTutorial" disable="true" minWidth="-Infinity" mnemonicParsing="false" styleClass="control-text" text="Show Tutorial" toggleGroup="$sessionChoice" GridPane.hgrow="SOMETIMES" GridPane.rowIndex="4" GridPane.vgrow="NEVER" />
                  <Region minHeight="50.0" prefHeight="200.0" prefWidth="200.0" GridPane.rowIndex="5" GridPane.vgrow="ALWAYS" />
                  <ChoiceBox fx:id="sessionResumeChooser" disable="true" prefWidth="250.0" styleClass="control-text" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                  <RadioButton fx:id="radioReviewResults" disable="true" mnemonicParsing="false" text="Review results of prior session" toggleGroup="$sessionChoice" GridPane.rowIndex="3" />
                  <ComboBox disable="true" prefWidth="250.0" GridPane.columnIndex="1" GridPane.rowIndex="3" />
                  <RadioButton fx:id="radioNewSession" mnemonicParsing="false" selected="true" text="Start a new scoring session" toggleGroup="$sessionChoice" GridPane.rowIndex="1" />
               </children>
               <opaqueInsets>
                  <Insets />
               </opaqueInsets>
            </GridPane>
            <Region minWidth="50.0" HBox.hgrow="ALWAYS" />
         </children>
      </HBox>
      <HBox layoutY="138.0" VBox.vgrow="NEVER">
         <children>
            <Region HBox.hgrow="ALWAYS" />
            <Button mnemonicParsing="false" onAction="#launchSession" styleClass="control-text" text="Start" HBox.hgrow="NEVER" />
         </children>
      </HBox>
   </children>
</VBox>
