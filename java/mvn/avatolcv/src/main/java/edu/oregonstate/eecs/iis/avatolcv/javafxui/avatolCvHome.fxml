<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.text.*?>
<?import javafx.scene.control.*?>
<?import java.lang.*?>
<?import javafx.scene.layout.*?>

<BorderPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="400.0" prefWidth="600.0" stylesheets="@../css/javafx.css" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1">
   <top>
      <Label styleClass="title-text" text="AvatolCV" BorderPane.alignment="CENTER">
         <font>
            <Font size="19.0" />
         </font>
         <BorderPane.margin>
            <Insets bottom="40.0" top="40.0" />
         </BorderPane.margin>
      </Label>
   </top>
   <bottom>
      <HBox BorderPane.alignment="CENTER">
         <children>
            <Region HBox.hgrow="ALWAYS" />
            <Button mnemonicParsing="false" onAction="#launchSession" styleClass="control-text" text="Start" HBox.hgrow="NEVER" />
         </children>
         <BorderPane.margin>
            <Insets bottom="6.0" left="6.0" right="6.0" top="6.0" />
         </BorderPane.margin>
      </HBox>
   </bottom>
   <right>
      <Region minWidth="80.0" prefHeight="200.0" BorderPane.alignment="CENTER" />
   </right>
   <center>
      <GridPane alignment="CENTER" hgap="10.0" vgap="20.0" BorderPane.alignment="CENTER">
        <columnConstraints>
          <ColumnConstraints fillWidth="false" hgrow="NEVER" minWidth="10.0" />
            <ColumnConstraints fillWidth="false" hgrow="ALWAYS" minWidth="10.0" prefWidth="80.0" />
        </columnConstraints>
        <rowConstraints>
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
        </rowConstraints>
         <children>
            <Label minWidth="-Infinity" styleClass="heading-text" text="Choose  session" GridPane.vgrow="NEVER" />
            <RadioButton fx:id="radioPresenceAbsence" minWidth="-Infinity" mnemonicParsing="false" selected="true" styleClass="control-text" text="Score presence/absence of parts in specimen" GridPane.hgrow="SOMETIMES" GridPane.rowIndex="1" GridPane.vgrow="NEVER">
               <toggleGroup>
                  <ToggleGroup fx:id="sessionChoice" />
               </toggleGroup>
            </RadioButton>
            <RadioButton fx:id="radioShape" disable="true" minWidth="-Infinity" mnemonicParsing="false" styleClass="control-text" text="Score shape aspects of specimen" toggleGroup="$sessionChoice" GridPane.hgrow="SOMETIMES" GridPane.rowIndex="2" GridPane.vgrow="NEVER" />
            <HBox alignment="CENTER_LEFT" fillHeight="false" spacing="10.0" GridPane.hgrow="SOMETIMES" GridPane.rowIndex="4" GridPane.vgrow="NEVER">
               <children>
                  <RadioButton fx:id="radioResume" disable="true" minWidth="-Infinity" mnemonicParsing="false" styleClass="control-text" text="Resume session in progress" toggleGroup="$sessionChoice" />
               </children>
            </HBox>
            <RadioButton fx:id="radioTutorial" disable="true" minWidth="-Infinity" mnemonicParsing="false" styleClass="control-text" text="Tutorial" toggleGroup="$sessionChoice" GridPane.hgrow="SOMETIMES" GridPane.rowIndex="6" GridPane.vgrow="NEVER" />
            <Region minHeight="50.0" prefHeight="200.0" prefWidth="200.0" GridPane.rowIndex="7" GridPane.vgrow="ALWAYS" />
            <RadioButton fx:id="radioTexture" disable="true" mnemonicParsing="false" text="Score texture aspects of specimen" toggleGroup="$sessionChoice" GridPane.rowIndex="3" />
            <ComboBox fx:id="presenceAbsenceAlgChooser" prefWidth="250.0" GridPane.columnIndex="1" GridPane.rowIndex="1" />
            <ChoiceBox fx:id="sessionResumeChooser" disable="true" prefWidth="250.0" styleClass="control-text" GridPane.columnIndex="1" GridPane.rowIndex="4" />
            <ComboBox fx:id="shapeAlgChooser" disable="true" prefWidth="250.0" GridPane.columnIndex="1" GridPane.rowIndex="2" />
            <ComboBox fx:id="textureAlgChooser" disable="true" prefWidth="250.0" GridPane.columnIndex="1" GridPane.rowIndex="3" />
            <RadioButton disable="true" mnemonicParsing="false" text="Review results of prior session" toggleGroup="$sessionChoice" GridPane.rowIndex="5" />
            <ComboBox disable="true" prefWidth="250.0" GridPane.columnIndex="1" GridPane.rowIndex="5" />
         </children>
         <opaqueInsets>
            <Insets />
         </opaqueInsets>
         <BorderPane.margin>
            <Insets />
         </BorderPane.margin>
      </GridPane>
   </center>
   <left>
      <Region minWidth="80.0" prefHeight="200.0" BorderPane.alignment="CENTER" />
   </left>
</BorderPane>
