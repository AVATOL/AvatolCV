<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.text.*?>
<?import javafx.scene.control.*?>
<?import java.lang.*?>
<?import javafx.scene.layout.*?>

<BorderPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="400.0" prefWidth="600.0" stylesheets="@javafx.css" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1">
   <top>
      <Label styleClass="title-text" text="Welcome to AvatolCV" BorderPane.alignment="CENTER">
         <font>
            <Font size="19.0" />
         </font>
         <BorderPane.margin>
            <Insets bottom="40.0" top="40.0" />
         </BorderPane.margin>
      </Label>
   </top>
   <bottom>
      <HBox BorderPane.alignment="CENTER">
         <children>
            <Region HBox.hgrow="ALWAYS" />
            <Button mnemonicParsing="false" onAction="#launchSession" styleClass="control-text" text="Start" HBox.hgrow="NEVER" />
         </children>
         <BorderPane.margin>
            <Insets bottom="6.0" left="6.0" right="6.0" top="6.0" />
         </BorderPane.margin>
      </HBox>
   </bottom>
   <right>
      <Region minWidth="80.0" prefHeight="200.0" BorderPane.alignment="CENTER" />
   </right>
   <center>
      <GridPane alignment="CENTER" vgap="20.0" BorderPane.alignment="CENTER">
        <columnConstraints>
            <ColumnConstraints fillWidth="false" hgrow="ALWAYS" minWidth="10.0" prefWidth="80.0" />
          <ColumnConstraints fillWidth="false" hgrow="NEVER" minWidth="10.0" />
            <ColumnConstraints fillWidth="false" hgrow="ALWAYS" minWidth="10.0" prefWidth="80.0" />
        </columnConstraints>
        <rowConstraints>
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
        </rowConstraints>
         <children>
            <Label minWidth="-Infinity" styleClass="heading-text" text="Choose  session" GridPane.columnIndex="1" GridPane.vgrow="NEVER" />
            <RadioButton fx:id="radioMBSession" minWidth="-Infinity" mnemonicParsing="false" styleClass="control-text" text="New session using Morphobank data" GridPane.columnIndex="1" GridPane.hgrow="SOMETIMES" GridPane.rowIndex="1" GridPane.vgrow="NEVER">
               <toggleGroup>
                  <ToggleGroup fx:id="sessionChoice" />
               </toggleGroup>
            </RadioButton>
            <RadioButton fx:id="radioBisqueSession" minWidth="-Infinity" mnemonicParsing="false" styleClass="control-text" text="New session using Bisque data" toggleGroup="$sessionChoice" GridPane.columnIndex="1" GridPane.hgrow="SOMETIMES" GridPane.rowIndex="2" GridPane.vgrow="NEVER" />
            <HBox alignment="CENTER_LEFT" fillHeight="false" spacing="10.0" GridPane.columnIndex="1" GridPane.hgrow="SOMETIMES" GridPane.rowIndex="3" GridPane.vgrow="NEVER">
               <children>
                  <RadioButton fx:id="radioResumeSession" disable="true" minWidth="-Infinity" mnemonicParsing="false" styleClass="control-text" text="Resume session" toggleGroup="$sessionChoice" />
                  <ChoiceBox prefWidth="300.0" styleClass="control-text" />
               </children>
            </HBox>
            <RadioButton fx:id="radioTutorialSession" disable="true" minWidth="-Infinity" mnemonicParsing="false" styleClass="control-text" text="Tutorial" toggleGroup="$sessionChoice" GridPane.columnIndex="1" GridPane.hgrow="SOMETIMES" GridPane.rowIndex="4" GridPane.vgrow="NEVER" />
            <Region minHeight="50.0" prefHeight="200.0" prefWidth="200.0" GridPane.columnIndex="1" GridPane.rowIndex="5" GridPane.vgrow="ALWAYS" />
         </children>
         <opaqueInsets>
            <Insets />
         </opaqueInsets>
      </GridPane>
   </center>
   <left>
      <Region minWidth="80.0" prefHeight="200.0" BorderPane.alignment="CENTER" />
   </left>
</BorderPane>
