<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.image.*?>
<?import javafx.scene.control.*?>
<?import java.lang.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="CENTER" maxHeight="-Infinity" maxWidth="-Infinity" spacing="10.0" stylesheets="@../../css/javafx.css" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <Label text="ImageOrientation" />
      <Label text="Specimens must be oriented in the same direction. " wrapText="true" />
      <HBox spacing="8.0" VBox.vgrow="NEVER">
         <children>
            <Region HBox.hgrow="ALWAYS" />
            <Label text="Click on an image to " />
            <RadioButton fx:id="radioFlipHorizontal" mnemonicParsing="false" selected="true" text="flip horizontally" HBox.hgrow="NEVER">
               <toggleGroup>
                  <ToggleGroup fx:id="flipToggleGroup" />
               </toggleGroup>
            </RadioButton>
            <RadioButton fx:id="radioFlipVertical" mnemonicParsing="false" text="flip vertically" toggleGroup="$flipToggleGroup" HBox.hgrow="NEVER" />
            <RadioButton fx:id="radioExclude" mnemonicParsing="false" text="exclude" toggleGroup="$flipToggleGroup" />
            <Region HBox.hgrow="ALWAYS" />
         </children>
      </HBox>
      <AnchorPane VBox.vgrow="ALWAYS">
         <children>
            <VBox alignment="CENTER" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
               <children>
                  <ScrollPane fitToHeight="true" fitToWidth="true" VBox.vgrow="ALWAYS">
                    <content>
                      <AnchorPane minHeight="-Infinity" minWidth="-Infinity">
                           <children>
                              <GridPane fx:id="excludeImageGrid" hgap="3.0" vgap="3.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                                 <columnConstraints>
                                    <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                                 </columnConstraints>
                                 <rowConstraints>
                                    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                                 </rowConstraints>
                              </GridPane>
                           </children>
                        </AnchorPane>
                    </content>
                  </ScrollPane>
               </children>
            </VBox>
         </children>
      </AnchorPane>
   </children>
</VBox>
