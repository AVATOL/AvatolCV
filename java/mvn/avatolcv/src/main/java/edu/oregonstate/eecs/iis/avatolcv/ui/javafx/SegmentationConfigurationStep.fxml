<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import java.lang.*?>
<?import javafx.scene.layout.*?>

<HBox maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="400.0" prefWidth="600.0" stylesheets="@../../css/javafx.css" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <Region prefWidth="100.0" HBox.hgrow="NEVER" />
      <VBox spacing="10.0" HBox.hgrow="NEVER">
         <children>
            <Region prefHeight="200.0" prefWidth="200.0" VBox.vgrow="ALWAYS" />
            <TextArea editable="false" style="-fx-background-color: transparent; : ;" stylesheets="@../../css/javafx.css" text="Segmentation can help isolate the specimen of interest when the image contains background clutter or other objects.  " wrapText="true" />
            <RadioButton fx:id="radioSegNo" mnemonicParsing="false" selected="true" text="skip segmentation">
               <toggleGroup>
                  <ToggleGroup fx:id="dataSourceToggle" />
               </toggleGroup>
            </RadioButton>
            <HBox prefHeight="100.0" prefWidth="200.0">
               <children>
                  <RadioButton fx:id="radioSegYes" mnemonicParsing="false" text="use segmentation algorithm" toggleGroup="$dataSourceToggle">
                     <padding>
                        <Insets right="30.0" />
                     </padding>
                  </RadioButton>
                  <ListView fx:id="segAlgChoiceList" prefHeight="200.0" prefWidth="200.0" HBox.hgrow="ALWAYS" />
               </children>
            </HBox>
            <TextArea fx:id="segAlgNotes" prefHeight="200.0" prefWidth="200.0">
               <VBox.margin>
                  <Insets top="10.0" />
               </VBox.margin>
            </TextArea>
            <Region prefHeight="200.0" prefWidth="200.0" VBox.vgrow="ALWAYS" />
         </children>
      </VBox>
      <Region prefWidth="100.0" HBox.hgrow="ALWAYS" />
   </children>
</HBox>
