<?xml version='1.0' encoding='UTF-8'?> 
<questions> 
    <question type="choice" id="BREADBOX"> 
        <text>Is it bigger than a breadbox?</text>
        <answer value="yes" next="COLOR"/>
        <answer value="no" next="WEIGHT"/>
        <image filename="elephant.jpg" caption="elephants are bigger than a breadbox"/>
        <image filename="mouse.jpg" caption="mice are smaller than a breadbox"/>
    </question>
    <question type="choice" id="COLOR">
        <text>What color is the larger-than-breadbox item?</text>
        <answer value="red" next="COVER_PERCENT"/>
        <answer value="green" next="COVER_PERCENT"/>
        <answer value="blue" next="COVER_PERCENT"/>
    </question>
    <question type="input_integer" id="WEIGHT">
        <text>What is the weight in kilograms of the smaller-than-breadbox item?</text>
        <answer value="0" next="COVER_PERCENT"/>
    </question>
    <question type="input_integer" id="COVER_PERCENT">
        <text>What percent of image is occupied?</text>
        <answer value="0" next="NO_MORE_QUESTIONS"/>
    </question>
</questions>
